<p id="notice"><%= notice %></p>

<%= link_to "See Roasts", roasts_path %>

<h1>Check Ins</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Roast</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @check_ins.each do |check_in| %>
      <tr>
        <td><%= check_in.location %></td>
        <td><%= check_in.roast.name %></td>
        <td><%= check_in.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Show', check_in %></td>
        <td><%= link_to 'Edit', edit_check_in_path(check_in) %></td>
        <td><%= link_to 'Destroy', check_in, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Check In', new_check_in_path %>
